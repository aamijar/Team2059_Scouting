<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="general_category"
        app:title="General">

        <ListPreference
            android:defaultValue="Set By Battery Saver"
            android:entries="@array/theme_options"
            android:entryValues="@array/theme_options"
            app:iconSpaceReserved="false"
            app:key="theme"
            app:summary="Set dark or light theme"
            app:title="App Theme" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="scouting_category"
        app:title="Scouting">

        <SwitchPreferenceCompat
            android:defaultValue="false"
            app:iconSpaceReserved="false"
            app:key="placeholder_teams"
            app:summary="Include placeholder teams in scout sheet"
            app:title="Placeholder Teams" />
        <ListPreference
            android:defaultValue="Blue"
            android:entries="@array/avatar_colors"
            android:entryValues="@array/avatar_colors"
            app:iconSpaceReserved="false"
            app:key="avatar_color"
            app:summary="Select avatar backdrop color"
            app:title="Avatar Color" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="bluetooth_category"
        app:title="Bluetooth">

        <EditTextPreference
            app:key="my_bluetooth_device_nickname"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true"
            app:title="Edit Device Name"/>

    </PreferenceCategory>

</PreferenceScreen>