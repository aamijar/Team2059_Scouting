<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="4dp"
    app:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">


        <TextView
            android:id="@+id/team_card_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="35sp"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/eagle_book"
            android:layout_alignEnd="@id/team_card_rank"
            android:layout_alignStart="@id/team_card_rank"
            android:padding="6dp"
            android:gravity="center_horizontal"
            android:layout_alignRight="@id/team_card_rank"
            android:layout_alignLeft="@id/team_card_rank" />

        <TextView
            android:id="@+id/team_card_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rank 1"
            android:layout_below="@id/team_card_position"
            app:fontFamily="@font/eagle_light"
            android:textStyle="bold"
            android:layout_marginStart="5dp"/>

        <ImageView
            android:id="@+id/team_card_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/team_card_position"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="56dp"
            android:padding="4dp"
            app:srcCompat="@mipmap/hh_launcher" />

        <TextView
            android:id="@+id/team_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/team_card_avatar"
            android:layout_toRightOf="@id/team_card_avatar"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="6dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:text="@string/app_name"
            android:textSize="16sp"

            app:fontFamily="@font/eagle_book" />

        <TextView
            android:id="@+id/team_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2059"
            app:fontFamily="@font/eagle_book"
            android:layout_alignBottom="@id/team_card_position"
            android:layout_below="@id/team_card_name"
            android:layout_toEndOf="@id/team_card_avatar"
            android:layout_toRightOf="@id/team_card_avatar"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/team_card_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(12-0-0)"
            android:layout_below="@id/team_card_rank"
            android:textSize="14dp"
            android:fontFamily="@font/eagle_light"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/team_card_attr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/team_card_number"
            android:layout_alignTop="@id/team_card_rank"
            android:layout_alignBottom="@id/team_card_rank"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:text="Filter Attribute 1"
            android:textStyle="bold"
            app:fontFamily="@font/eagle_light" />

        <TextView
            android:id="@+id/team_card_attr2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter Attribute 2"
            app:fontFamily="@font/eagle_light"
            android:textStyle="bold"
            android:layout_alignTop="@id/team_card_record"
            android:layout_alignStart="@id/team_card_attr1"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:layout_alignLeft="@id/team_card_attr1" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>